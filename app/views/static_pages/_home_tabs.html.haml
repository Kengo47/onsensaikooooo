%ul.nav.nav-tabs.justify-content-center.mt-3
  %li.nav-item
    %a{ href: '#tab1', class: 'nav-link active n-l-item', 'data-toggle' => 'tab' }
      %i.fas.fa-map-marker
  %li.nav-item
    %a{ href: '#tab2', class: 'nav-link n-l-item', 'data-toggle' => 'tab' }
      %i.fas.fa-book-open
  %li.nav-item
    %a{ href: '#tab3', class: 'nav-link n-l-item', 'data-toggle' => 'tab' }
      %i.fas.fa-chart-bar

.tab-content
  #tab1.tab-pane.active
    = render partial: 'gmap', locals: { posts: posts }

  #tab2.tab-pane
    = render partial: 'posts/posts_index', locals: { posts: posts }

  #tab3.tab-pane
    %p.home-text.mt-3.mb-3  投稿された都道府県の割合（TOP10）
    = pie_chart @chart