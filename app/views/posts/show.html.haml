.row.mb-5
  .col-md-6.mb-5
    .post-frame.shadow
      = image_tag @post.picture.url, class: "post-image"
  .col-md-6
    %h3.post-title.text-left.mb-5
      この温泉の思い出の詳細

    = render partial: 'post_details', locals: { post: @post }

    .row
      .col-md-4
        #like_area
          = render partial: 'likes/like', locals: { post: @post }
      .col-md-8
        #edit_area
          = render partial: 'post_edit_area', locals: { post: @post }

= render partial: 'post_tabs', locals: { comment: @comment, comments: @comments, post: @post }