.comment-area.text-left.mx-auto.border-bottom
  .comment-user
    - if comment.user.avatar?
      = link_to image_tag(comment.user.avatar.url, class: "comment-avatar"), comment.user
    - else
      = link_to image_tag("no_image.png", class: "comment-avatar"), comment.user
    %span
      = link_to comment.user.name, comment.user
    %span
      = comment.created_at.to_s(:datetime_jp)

  = comment.comment
  - if user_signed_in? && (comment.user.id == current_user.id)
    = link_to "delete", comment, method: :delete, data: { confirm: "コメントを削除してよろしいですか？" }, class: "btn btn-danger"